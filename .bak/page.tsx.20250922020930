  const handleSwipe = (direction: 'left' | 'right') => {
    if (!loggedIn) return;
    if (direction === 'left' && currentScreen < MAX_INDEX) setCurrentScreen(currentScreen + 1);
    else if (direction === 'right' && currentScreen > 0) setCurrentScreen(currentScreen - 1);
