    setReservations((prev: any) => ({
      ...prev,
      [roomId]: { ...(prev[roomId]||{}), [dateKey]: { ...(prev[roomId]?.[dateKey]||{}), [timeKey]: newRes } }
    }));
    loadServerMine();
